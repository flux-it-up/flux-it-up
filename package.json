{
    "private": true,
    "type": "module",
    "scripts": {
        "build": "vite build",
        "dev": "vite",
        "watch:blade": "chokidar 'resources/views/**/*.blade.php' 'app/Http/Livewire/**/*.php' -c 'php artisan view:clear && php artisan cache:clear && php artisan route:clear'",
        "dev:full": "concurrently \"npm run dev\" \"npm run watch:blade\""
    },
    "dependencies": {
        "@tailwindcss/forms": "^0.5.10",
        "@tailwindcss/vite": "^4.0.7",
        "autoprefixer": "^10.4.20",
        "axios": "^1.7.4",
        "laravel-vite-plugin": "^1.0",
        "tailwindcss": "^4.0.7",
        "vite": "^6.2"
    },
    "optionalDependencies": {
        "@rollup/rollup-linux-x64-gnu": "4.9.5",
        "@tailwindcss/oxide-linux-x64-gnu": "^4.0.1",
        "lightningcss-linux-x64-gnu": "^1.29.1"
    },
    "devDependencies": {
        "chokidar-cli": "^3.0.0",
        "concurrently": "^9.2.1"
    }
}
